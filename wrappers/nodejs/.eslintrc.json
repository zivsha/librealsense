{
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "header"
  ],
  "rules": {
    "header/header": [2, "tools/header.js"],
    "max-len": ["error", 100, 2, { "ignoreUrls": true }],
    "quotes": ["error", "single"],
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": false,
        "MethodDefinition": false,
        "ClassDeclaration": false
      }
    }]
  }
}
